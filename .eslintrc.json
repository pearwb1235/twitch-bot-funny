{
  "extends": ["plugin:prettier/recommended"],
  "plugins": [],
  "ignorePatterns": "**/dist",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "legacyDecorators": true
    }
  },
  "env": {
    "es6": true,
    "node": true
  },
  "overrides": [
    {
      "files": ["*.{ts,tsx}"],
      "extends": "plugin:@typescript-eslint/recommended"
    }
  ]
}
