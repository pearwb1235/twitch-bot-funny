{
  "presets": ["@babel/preset-env", "@babel/preset-typescript"],
  "plugins": [
    ["@babel/plugin-proposal-class-properties"],
    [
      "@babel/plugin-proposal-decorators",
      {
        "decoratorsBeforeExport": true
      }
    ],
    ["@babel/plugin-transform-runtime"],
    [
      "babel-plugin-root-import",
      {
        "paths": [
          {
            "rootPathSuffix": "./",
            "rootPathPrefix": "!/"
          },
          {
            "rootPathSuffix": "./src/",
            "rootPathPrefix": "~/"
          }
        ]
      }
    ]
  ]
}
